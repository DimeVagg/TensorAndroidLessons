<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="anyText">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="smallText" parent="anyText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="middleText" parent="anyText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bigText" parent="anyText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="iconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">-10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:fontFamily">default</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <style name="imageButton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>